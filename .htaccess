# Security Headers
<IfModule mod_headers.c>
	Header set X-XSS-Protection "1; mode=block"
	Header set X-Frame-Options "SAMEORIGIN"
	Header set X-Content-Type-Options "nosniff"
	Header always set Strict-Transport-Security "max-age=63072000; includeSubDomains"
	# Header set Content-Security-Policy ...
	Header set Referrer-Policy "same-origin"
	Header set Feature-Policy "geolocation 'self'; vibrate 'none'"
	Require all granted
</IfModule>


# Caching schema
<FilesMatch "\.(.css|.js|.png|.jpg|.gif|.json)$">
Header set Cache-Control "public, max-age=6"
</FilesMatch>

# Custom 400 errors
ErrorDocument 400 /WebPress/errors.php/code/400

# Custom 401 errors
ErrorDocument 401 /WebPress/errors.php/code/401

# Custom 403 errors
ErrorDocument 403 /WebPress/errors.php/code/403

# Custom 404 errors
ErrorDocument 404 /WebPress/errors.php/code/404

# Custom 500 errors
ErrorDocument 500 /WebPress/errors.php/code/500


RewriteEngine On 
#remove php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.php [NC,L]
